{
  "name": "textcat-telesto",
  "version": "2.0.1",
  "main": "main.js",
  "build": {
    "appId": "com.github.gitipedras.textcat",
    "icon": "src/icons/icon.png",
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "files": [
      "**/*"
    ]
  },
  "scripts": {
    "run": "npx electron .",
    "patch": "sudo chown root:root node_modules/electron/dist/chrome-sandbox && sudo chmod 4755 node_modules/electron/dist/chrome-sandbox",
    "build": "npx electron-builder --publish never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  }
}
